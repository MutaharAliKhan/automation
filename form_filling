from playwright.sync_api import Page

def fill_form_fields(page: Page, amount=None, narration=None, description=None, transaction_id=None, 
                    date=None, customer_name=None, account_number=None, reference=None, 
                    email=None, phone=None):
    """
    Fills specified form fields if they are visible and editable.

    Args:
        page (Page): The Playwright Page object.
        amount (str): Value to fill in the amount field.
        narration (str): Value to fill in the narration field.
        description (str): Value to fill in the description field.
        transaction_id (str): Value to fill in the transaction_id field.
        date (str): Value to fill in the date field.
        customer_name (str): Value to fill in the customer_name field.
        account_number (str): Value to fill in the account_number field.
        reference (str): Value to fill in the reference field.
        email (str): Value to fill in the email field.
        phone (str): Value to fill in the phone field.
    """
    # Map of parameter names to their corresponding locators
    field_locators = {
        'amount': 'input[name="amount"]',
        'narration': 'input[name="narration"]',
        'description': 'input[name="description"]',
        'transaction_id': 'input[name="transaction_id"]',
        'date': 'input[name="date"]',
        'customer_name': 'input[name="customer_name"]',
        'account_number': 'input[name="account_number"]',
        'reference': 'input[name="reference"]',
        'email': 'input[name="email"]',
        'phone': 'input[name="phone"]'
    }

    # Map of parameter names to their corresponding values
    field_values = {
        'amount': amount,
        'narration': narration,
        'description': description,
        'transaction_id': transaction_id,
        'date': date,
        'customer_name': customer_name,
        'account_number': account_number,
        'reference': reference,
        'email': email,
        'phone': phone
    }

    # Iterate over each field and fill it if a value is provided and the field is visible and editable
    for field_name, locator in field_locators.items():
        value = field_values[field_name]
        if value is not None:
            locator_element = page.locator(locator)
            if locator_element.is_visible() and locator_element.is_enabled():
                locator_element.fill(value)

# Usage example
page.goto("https://example.com/form")

# Fill only the amount and narration fields
fill_form_fields(page, amount="1000", narration="Payment for services")